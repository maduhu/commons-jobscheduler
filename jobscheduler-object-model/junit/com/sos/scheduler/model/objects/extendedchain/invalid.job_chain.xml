<?xml version="1.0" encoding="UTF-8"?><!--This is a sample of a jobchain that contains additional elements and attributes  from the different namespace ext.They are not respected by the JobScheduler kernel, therefore they come from a separate xsd job-chain-extensions.xsd.Anyway, the affacted elements of the scheduler.xsd must allow child elements resp. attributes from different namespaces. In this sample the element job_chain_node allow child elements from different namespaces and additional attributes from specific namespaces:<xsd:element name="job_chain_node">	<xsd:complexType>		<xsd:sequence>			<xsd:element ref="extensions" minOccurs="0"/>			<xsd:any namespace="##other" minOccurs="0"/>			// allow additional elements		</xsd:sequence>		<xsd:attribute name="state" type="String" use="required"/>		<xsd:attribute name="job" type="Path"/>		<xsd:attribute name="next_state" type="String"/>		<xsd:attribute name="error_state" type="String"/>		<xsd:attribute name="on_error">			<xsd:simpleType>				<xsd:restriction base="xsd:NMTOKEN">					<xsd:enumeration value="setback"/>					<xsd:enumeration value="suspend"/>				</xsd:restriction>			</xsd:simpleType>		</xsd:attribute>		<xsd:attribute name="suspend" type="Yes_no"/>		<xsd:attribute name="delay" type="xsd:nonNegativeInteger"/>		<xsd:anyAttribute/>															// allow additional attributes	</xsd:complexType></xsd:element>--><job_chain xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="scheduler.xsd"           xmlns:ext="job-chain-extensions"           xsi:schemaLocation="job-chain-extensions job-chain-extensions-v1.0.xsd" orders_recoverable="yes"           visible="yes" name="myChain">    <job_chain_node state="100" job="JobChainStart" next_state="200" error_state="error"/>    <!-- namespace unknown is not valid -->    <job_chain_node state="200" job="JobChainEnd" next_state="success" error_state="error" ext:previous_state="100"  unknown:name="unknown">        <ext:params>            <!-- the attributenames hast to specify without prefix -->            <ext:param ext:name="param1" ext:value="value1" />        </ext:params>    </job_chain_node>    <job_chain_node state="error"/>    <job_chain_node state="success"/></job_chain>