<?xml version="1.0" encoding="iso-8859-1"?>
<!-- ========================================================================================================================= -->
<!-- Name:             SOSNet-build.xml                                                                                        -->
<!-- Zweck:            Verfügbar machen von Targets für die Entwicklung, z. B. "jar", um das Jar zu erstellen                  -->
<!-- Target jar:       Erstellt das jar in ./build/lib (Zusätzlich wird es mit Datum versehen und kopiert)                     -->
<!-- ========================================================================================================================= -->

<project name="net" basedir="." default="jar">

	<import file="../AntHelper/TargetDef.xml" />

  <!-- <xmlproperty file="ProjectProperties.xml" semanticattributes="true" />  -->
  
	<property name="package.path" value="sos" />
	<property name="package.pref" value="com.sos" />
	<property name="jar.pref" value="${package.pref}" />
	<property name="main.class.name" value="${package.pref}.${ant.project.name}.NoMainClass" />


	<!-- ======================================================================= -->
	<!--  all                                                                    -->
	<!-- ======================================================================= -->

	<target name="all" depends="clean,compile,jar,doxygen.docu" description="clean, compile, javadocs und danach jar erzeugen." />

	<target name="deactivated-prepare_jar">
		<!--
	        <copy todir="${build.classes}">
	            <fileset dir="." includes="getParentId.exe" />
	        </copy>
	        -->
		<!-- <copy todir="${build.classes}"> -->
		<copy todir="${build.dir}/bin">
			<fileset dir="src/sos/net" includes="getParentId.exe" />
		</copy>
	<!--	<copy todir="${build.classes}/sos/net/sosftp"> -->
		<copy todir="${build.classes}/sosftp"> 
			<fileset dir="src/sos/net/sosftp" includes="Configuration.xml" />
		</copy>

	</target>


</project>